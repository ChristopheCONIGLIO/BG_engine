package  {	import flash.display.Sprite;	public class Column extends EngCir{		/*-------------------*/		private var _sp				:Sprite = null;		/*------------------------------------------------*/		public function Column($engWorld:EngWorld,$px:Number,$py:Number,$radius:Number) {			super($engWorld);			_gravityZ = 0.0;			_static = true;			_radius = $radius;			initDataArray();			this.setPosition($px,$py);			//---------------			initMe();		}		/*------------------------------------------------*/		/*------------------------------------------------*/		override public function destroyMe(){			initMe();			super.destroyMe();		}		/*------------------------------------------------*/		/*------------------------------------------------*/		public function initMe(){			_sp = new Sprite;						graphics.clear();			graphics.lineStyle(2, 0xfff98e);			graphics.beginFill(0xc7b859);									graphics.drawCircle(0,0,_radius);			graphics.endFill();			addChild( _sp );		}		/*------------------------------------------------*/		/*------------------------------------------------*/	}}